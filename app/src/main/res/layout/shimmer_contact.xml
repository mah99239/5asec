<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_shimmer_contact_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="@dimen/margin_all_guideline"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_shimmer_contact_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="@dimen/margin_all_guideline"
        app:layout_constraintStart_toEndOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_shimmer_contact_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="@dimen/margin_all_guideline" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_shimmer_contact_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="@dimen/margin_all_guideline" />

    <View
        android:id="@+id/tv_shimmer_contact_label"
        android:layout_width="46dp"
        android:layout_height="24dp"
        android:background="@color/md_theme_dark_onBackground"

        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toTopOf="@+id/gl_shimmer_contact_up" />

    <View
        android:id="@+id/d_shimmer_contact_after_contact"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/md_theme_dark_onBackground"

        android:layout_marginTop="@dimen/margin_contact_divider"
        app:layout_constraintEnd_toStartOf="@+id/gl_shimmer_contact_end"
        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_shimmer_contact_label" />

    <View
        android:id="@+id/iv_shimmer_contact_phone"
        android:layout_width="@dimen/size_contact_icon"
        android:layout_height="@dimen/size_contact_icon"
        android:layout_marginStart="@dimen/margin_contact_start"
        android:layout_marginTop="@dimen/margin_contact_top"
        android:background="@color/md_theme_dark_onBackground"
        app:guidelineUseRtl="false"
        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/d_shimmer_contact_after_contact" />

    <View
        android:id="@+id/tv_shimmer_contact_phone"
        android:layout_width="120dp"
        android:layout_height="24dp"
        android:background="@color/md_theme_dark_onBackground"

        android:layout_marginStart="@dimen/margin_contact_start"
        app:layout_constraintStart_toEndOf="@+id/iv_shimmer_contact_phone"
        app:layout_constraintTop_toTopOf="@+id/iv_shimmer_contact_phone"
        />

    <View
        android:id="@+id/iv_shimmer_contact_email"
        android:layout_width="@dimen/size_contact_icon"
        android:layout_height="@dimen/size_contact_icon"
        android:layout_marginStart="@dimen/margin_contact_start"
        android:layout_marginTop="@dimen/margin_contact_top"
        android:background="@color/md_theme_dark_onBackground"

        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/iv_shimmer_contact_phone" />

    <View
        android:id="@+id/tv_shimmer_contact_email"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:background="@color/md_theme_dark_onBackground"

        android:layout_marginStart="@dimen/margin_contact_start"
        tools:text="http://www.5asec.sa/contact"
        app:layout_constraintStart_toEndOf="@+id/iv_shimmer_contact_email"
        app:layout_constraintTop_toTopOf="@+id/iv_shimmer_contact_email" />

    <View
        android:id="@+id/tv_shimmer_contact_social"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:background="@color/md_theme_dark_onBackground"

        android:layout_marginTop="@dimen/margin_contact_top_element"
        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/iv_shimmer_contact_email" />

    <View
        android:id="@+id/d_shimmer_contact_after_social"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/md_theme_dark_onBackground"

        android:layout_marginTop="@dimen/margin_contact_divider"
        app:layout_constraintEnd_toStartOf="@+id/gl_shimmer_contact_end"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_shimmer_contact_social" />

    <View
        android:id="@+id/iv_shimmer_contact_face"
        android:layout_width="@dimen/size_contact_button_icon"
        android:layout_height="@dimen/size_contact_button_icon"
        android:layout_marginTop="@dimen/margin_contact_top"
        app:layout_constraintEnd_toStartOf="@+id/iv_shimmer_contact_inst"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:background="@color/md_theme_dark_onBackground"

        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/d_shimmer_contact_after_social" />

    <View
        android:id="@+id/iv_shimmer_contact_inst"
        android:layout_width="@dimen/size_contact_button_icon"
        android:layout_height="@dimen/size_contact_button_icon"
        android:layout_marginStart="@dimen/margin_contact_start"
        android:layout_marginEnd="@dimen/margin_contact_start"
        app:layout_constraintEnd_toStartOf="@+id/iv_shimmer_contact_twit"
        app:layout_constraintHorizontal_bias="0.5"
        android:background="@color/md_theme_dark_onBackground"

        app:layout_constraintStart_toEndOf="@+id/iv_shimmer_contact_face"
        app:layout_constraintTop_toTopOf="@+id/iv_shimmer_contact_face" />

    <View
        android:id="@+id/iv_shimmer_contact_twit"
        android:layout_width="@dimen/size_contact_button_icon"
        android:layout_height="@dimen/size_contact_button_icon"
        app:layout_constraintEnd_toStartOf="@+id/gl_shimmer_contact_end"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_shimmer_contact_inst"
        android:background="@color/md_theme_dark_onBackground"

        app:layout_constraintTop_toTopOf="@+id/iv_shimmer_contact_inst" />

    <View
        android:id="@+id/tv_shimmer_contact_find"
        android:layout_width="64dp"
        android:layout_height="24dp"
        android:background="@color/md_theme_dark_onBackground"

        android:layout_marginTop="@dimen/margin_contact_top_element"
        android:text="@string/contact_text_find"
        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/iv_shimmer_contact_face" />

    <View
        android:id="@+id/d_shimmer_contact_after_find"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/md_theme_dark_onBackground"

        android:layout_marginTop="@dimen/margin_contact_divider"
        app:layout_constraintEnd_toStartOf="@+id/gl_shimmer_contact_end"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"
        app:layout_constraintTop_toBottomOf="@+id/tv_shimmer_contact_find" />

    <View
        android:id="@+id/mv_shimmer_contact_location"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_contact_top"
        android:background="@color/md_theme_dark_onBackground"
        app:layout_constraintBottom_toTopOf="@+id/gl_shimmer_contact_down"
        app:layout_constraintEnd_toStartOf="@+id/gl_shimmer_contact_end"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/gl_shimmer_contact_start"

        app:layout_constraintTop_toBottomOf="@+id/d_shimmer_contact_after_find"
       />
</androidx.constraintlayout.widget.ConstraintLayout>