<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_order_info"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_primaryContainer"
        android:paddingStart="@dimen/padding_order_info_start"
        android:paddingEnd="@dimen/padding_order_info_end"
        android:shadowColor="#AE3B3B"
        android:text="@string/order_info_id"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_onTertiary"
        android:paddingStart="@dimen/padding_order_info_start"
        android:text="TextView"
        android:textColor="@color/md_theme_light_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_order_info_id_title"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_ref_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_primaryContainer"
        android:paddingStart="@dimen/padding_order_info_start"
        android:paddingEnd="@dimen/padding_order_info_end"
        android:shadowColor="#AE3B3B"
        android:text="@string/order_info_ref"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/tv_order_info_id_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_id_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_id_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_ref"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_onTertiary"
        android:paddingStart="@dimen/padding_order_info_start"
        android:text="TextView"
        android:textColor="@color/md_theme_light_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_order_info_ref_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_id"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_id" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_type_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_primaryContainer"
        android:paddingStart="@dimen/padding_order_info_start"
        android:paddingEnd="@dimen/padding_order_info_end"
        android:shadowColor="#AE3B3B"
        android:text="@string/order_info_type"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/tv_order_info_ref_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_ref_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_ref_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_onTertiary"
        android:paddingStart="@dimen/padding_order_info_start"
        android:text="TextView"
        android:textColor="@color/md_theme_light_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_order_info_type_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_ref"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_ref" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_payment_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_primaryContainer"
        android:paddingStart="@dimen/padding_order_info_start"
        android:paddingEnd="@dimen/padding_order_info_end"
        android:shadowColor="#AE3B3B"
        android:text="@string/order_info_payment"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/tv_order_info_type_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_type_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_type_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_onTertiary"
        android:paddingStart="@dimen/padding_order_info_start"
        android:text="TextView"
        android:textColor="@color/md_theme_light_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_order_info_type_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_type" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_transport_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_primaryContainer"
        android:paddingStart="@dimen/padding_order_info_start"
        android:paddingEnd="@dimen/padding_order_info_end"
        android:shadowColor="#AE3B3B"
        android:text="@string/order_info_transport"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/tv_order_info_payment_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_payment_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_transport"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_onTertiary"
        android:paddingStart="@dimen/padding_order_info_start"
        android:text="TextView"
        android:textColor="@color/md_theme_light_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_order_info_type_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_payment"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_date_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_primaryContainer"
        android:paddingStart="@dimen/padding_order_info_start"
        android:paddingEnd="@dimen/padding_order_info_end"
        android:shadowColor="#AE3B3B"
        android:text="@string/order_info_date"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/tv_order_info_transport_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_transport_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_transport_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_onTertiary"
        android:paddingStart="@dimen/padding_order_info_start"
        android:text="TextView"
        android:textColor="@color/md_theme_light_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_order_info_type_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_transport"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_transport" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_status_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_primaryContainer"
        android:paddingStart="@dimen/padding_order_info_start"
        android:paddingEnd="@dimen/padding_order_info_end"
        android:shadowColor="#AE3B3B"
        android:text="@string/order_info_status"
        android:textColor="@color/md_theme_light_onPrimaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/tv_order_info_date_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_date_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_date_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_order_info_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:background="@color/md_theme_light_onTertiary"
        android:paddingStart="@dimen/padding_order_info_start"
        android:text="TextView"
        android:textColor="@color/md_theme_light_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_order_info_type_title"
        app:layout_constraintStart_toStartOf="@+id/tv_order_info_transport"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_date" />

</androidx.constraintlayout.widget.ConstraintLayout>