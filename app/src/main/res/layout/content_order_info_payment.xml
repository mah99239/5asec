<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_order_info_payment_items_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:text="@string/order_info_payment_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_order_info_payment_items_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        tools:text="64 SAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/d_order_info_payment_items_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment_items_total" />

    <TextView
        android:id="@+id/tv_order_info_payment_delivery_titil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:text="@string/order_info_payment_delivery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_items_total" />

    <TextView
        android:id="@+id/tv_order_info_payment_delivery_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        tools:text="20 SAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_items_total" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/d_order_info_payment_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment_delivery_cost" />

    <TextView
        android:id="@+id/tv_order_info_payment_vat_precentage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_marginTop="8dp"
        android:text="@string/order_info_payment_precentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_delivery" />

    <TextView
        android:id="@+id/tv_order_info_payment_vat_precentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        tools:text="5%"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_delivery" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/d_order_info_payment_vat_precentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment_vat_precentage_title" />

    <TextView
        android:id="@+id/tv_order_info_payment_vat_value_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:text="@string/order_info_payment_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_vat_precentage" />

    <TextView
        android:id="@+id/tv_order_info_payment_vat_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        tools:text="332 SAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_vat_precentage" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/d_order_info_payment_vat_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment_vat_value_title" />

    <TextView
        android:id="@+id/tv_order_info_payment_cash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:text="@string/order_info_payment_delivery_fees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_vat_value" />

    <TextView
        android:id="@+id/tv_order_info_payment_cash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_vat_value"
        tools:text="0 SAR" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/d_order_info_payment_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment_cash_title" />

    <TextView
        android:id="@+id/tv_order_info_payment_total_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        android:text="@string/order_info_payment_tota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_cash" />

    <TextView
        android:id="@+id/tv_order_info_payment_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        tools:text="423 SAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_order_info_payment_cash" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/d_order_info_payment_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_order_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_order_info_payment_total_title" />

</androidx.constraintlayout.widget.ConstraintLayout>