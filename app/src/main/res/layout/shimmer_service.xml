<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:paddingTop="@dimen/margin_item_services_container"
    android:paddingBottom="@dimen/margin_item_services_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/md_theme_light_surfaceVariant"

        android:gravity="start"
        android:orientation="vertical"/>

    <View
        android:layout_width="@dimen/size_item_services_image"
        android:layout_height="@dimen/size_item_services_image"

        android:layout_gravity="center"
        android:background="@color/md_theme_light_surfaceVariant"

        android:layout_weight="0"
        />

</LinearLayout>