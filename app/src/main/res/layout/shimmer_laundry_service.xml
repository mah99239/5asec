<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/guideline_all_margin"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView

        style="@style/Widget.5asec.CardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_price_card"
        android:layout_margin="4dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View

                android:layout_width="match_parent"
                android:layout_height="90dp"

                android:background="@color/md_theme_light_tertiaryContainer"

                android:padding="@dimen/padding_price_image"
                android:scaleType="fitCenter"
                app:strokeColor="@color/md_theme_light_outlineVariant"
                app:strokeWidth="1dp" />

            <View

                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:padding="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView

        style="@style/Widget.5asec.CardView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_price_card"
        android:layout_margin="4dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View

                android:layout_width="match_parent"
                android:layout_height="90dp"

                android:background="@color/md_theme_light_tertiaryContainer"

                android:padding="@dimen/padding_price_image"
                android:scaleType="fitCenter"
                app:strokeColor="@color/md_theme_light_outlineVariant"
                app:strokeWidth="1dp" />

            <View

                android:layout_width="match_parent"
                android:layout_height="30dp"

                android:padding="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
