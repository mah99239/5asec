<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_item_services_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingTop="@dimen/margin_item_services_container"
        android:paddingBottom="@dimen/margin_item_services_container"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_services_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_all_item_services_text"
                android:paddingEnd="@dimen/padding_all_item_services_text"

                android:textSize="18sp"
                tools:text="THOBE" />

            <TextView
                android:id="@+id/tv_item_services_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_all_item_services_text"
                android:paddingTop="@dimen/padding_all_item_services_text"
                android:paddingEnd="@dimen/padding_all_item_services_text"

                tools:text="100SAR" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_item_services"
            android:layout_width="@dimen/size_item_services_image"
            android:layout_height="@dimen/size_item_services_image"

            android:layout_gravity="center"

            android:layout_weight="0"
            android:contentDescription="@null"
            tools:srcCompat="@drawable/ic_menu_discount" />

    </LinearLayout>
</layout>