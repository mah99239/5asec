<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="SpinnerDatePicker" parent="@android:style/Widget.DatePicker">
        <item name="android:gravity">top|center_vertical</item>
        <item name="android:layout_gravity">top|center_vertical</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="SpinnerDatePickerDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">?attr/colorBackgroundFloating</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerStyle">@style/SpinnerDatePicker</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
    </style>

    <style name="TextAppearance_App_BodySmall" parent="@style/TextAppearance.Material3.BodySmall">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>

    <style name="TextAppearance_App_LabelLarge" parent="@style/TextAppearance.Material3.LabelLarge">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>

    <style name="TextAppearance_App_TitleMedium" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>

    <style name="TextAppearance_App_TitleSmall" parent="@style/TextAppearance.Material3.TitleSmall">
        <item name="android:fontFamily">@font/rubik_light</item>
        <item name="fontFamily">@font/rubik_light</item>
    </style>


    <style name="Widget_App_CardView" parent="@style/Widget.Material3.CardView.Filled">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:checkable">true</item>
        <item name="cardBackgroundColor">@color/card_status</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="checkedIcon">@null</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget_App_ExposedDropdownMenu" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>


    <style name="Widget_App_TextInputLayout" parent="@style/Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget_App_Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="collapseIcon">@drawable/ic_nav_back</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="Widget_App_button" parent="@style/Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">24dp</item>
    </style>


    <style name="Widget_App_primaryButton" parent="@style/Widget_App_button">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:backgroundTint">@color/md_theme_light_primary</item>
        <item name="rippleColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="Widget_App_secondaryButton" parent="@style/Widget_App_button">
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
        <item name="android:backgroundTint">@color/md_theme_light_secondary</item>
        <item name="rippleColor">@color/md_theme_light_onSecondaryContainer</item>
    </style>

    <style name="Widget_App_tertiaryButton" parent="@style/Widget_App_button">
        <item name="android:textColor">@color/md_theme_light_onTertiary</item>
        <item name="android:backgroundTint">@color/md_theme_light_tertiary</item>
        <item name="rippleColor">@color/md_theme_light_onTertiaryContainer</item>
    </style>


    <style name="Widget_asec_NavigationVIew" parent="@style/Widget.Material3.NavigationView">
        <item name="android:background">@color/md_theme_light_onPrimaryContainer</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemShapeFillColor">@color/navigation_item_background_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance_App_LabelLarge</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance_App_TitleSmall</item>
    </style>

    <style name="customDatePicker" parent="@style/Widget.MaterialComponents.MaterialCalendar">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>
    <style name="Widget_App_iconButton" parent="@style/Widget.Material3.Button.IconButton.Filled">
    </style>
    <style name="customDatePickerStyle" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:datePickerStyle">@style/customDatePicker</item>
    </style>
</resources>