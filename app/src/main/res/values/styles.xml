    <style name="Widget.5asec.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:checkable">true</item>
        <item name="cardBackgroundColor">@color/card_status</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="checkedIcon">@null</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Widget.5asec.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="errorEnabled">false</item>
        <item name="helperTextEnabled">true</item>
    </style>


    <style name="Widget.5asec.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.Dense">

        <item name="errorEnabled">false</item>
        <item name="helperTextEnabled">true</item>
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.5asec.TitleMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.5asec.BodySmall</item>
        <item name="hintTextColor">@color/md_theme_light_onSurface</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>


    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="Widget.5asec.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_light_primary</item>
        <item name="collapseIcon">@drawable/ic_nav_back</item>
        <item name="navigationIconTint">@color/md_theme_light_onPrimary</item>
        <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="Widget.5asec.button" parent="Widget.Material3.Button.IconButton.Filled.Tonal">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>

        <item name="android:textAlignment">center</item>
        <item name="cornerRadius">24dp</item>
    </style>


    <style name="Widget.5asec.primaryButton" parent="Widget.5asec.button">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="android:backgroundTint">@color/md_theme_light_primary</item>
        <item name="rippleColor">@color/md_theme_light_onPrimary</item>
    </style>

    <style name="Widget.5asec.secondaryButton" parent="Widget.5asec.button">
