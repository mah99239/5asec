<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.slidingpanelayout.widget.SlidingPaneLayout
        android:id="@+id/spl_price"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="300dp"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_height="match_parent"
           >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_price_list_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                tools:context=".ui.view.home.PriceListFragment"
                tools:visibility="visible">


                <AdapterViewFlipper
                    android:id="@+id/avf_price_list_banner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/md_theme_light_tertiaryContainer"
                    android:visibility="visible"
                    app:layout_constraintDimensionRatio="w,6:16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/avf_price_list_banner">

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/sh_price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            tools:visibility="gone">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="160dp"
                                android:background="@color/md_theme_light_tertiaryContainer"

                                />

                            <include layout="@layout/shimmer_price" />

                            <include layout="@layout/shimmer_price" />

                            <include layout="@layout/shimmer_price" />

                            <include layout="@layout/shimmer_price" />
                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_price_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingTop="@dimen/margin_price_list_recycle"

                        android:visibility="visible"
                        tools:listitem="@layout/list_item_price"
                        tools:visibility="visible" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_service"
        android:name="com.example.a5asec.ui.view.home.ServicesFragment"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_gravity="end"

        tools:layout="@layout/fragment_services"

        />
    </androidx.slidingpanelayout.widget.SlidingPaneLayout>

</layout>